<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AppTitle">

        <item name="android:textColor">@color/blueFontColor</item>
        <item name="android:textSize">100sp</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>

    <style name="BACNumber">
        <item name="android:textColor">@color/greenButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="MainScreenButton">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/buttonBackGrnd</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:width">100dp</item>
    </style>

</resources>
